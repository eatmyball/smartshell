<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OtherTransferDetailActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/otd_tbxBarcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:ems="10"
            android:inputType="text">

            <requestFocus
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </EditText>

        <Button
            android:id="@+id/ot_btn_Deal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/background"
            android:text="@string/btnDeal"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/pt_btn_Scan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:background="@color/background"
            android:text="扫描"
            android:textColor="#ffffff"
            android:textSize="16sp"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/otd_btn_Deal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@color/background"
        android:text="@string/btnDeal"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/otd_tbxSample1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/otd_tbxQuantity1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/otd_tbxSample2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/otd_tbxQuantity2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/otd_tbxSample3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/otd_tbxQuantity3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/otd_tbxSample4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/otd_tbxQuantity4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/otd_tbxSample5"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/otd_tbxQuantity5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/otd_tbxSample6"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/otd_tbxQuantity6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/otd_lblReturn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="回退"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/otd_tbxReturn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/otd_tbxSampleBarcode"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="条码"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/otd_tbxBarcodeQuantity"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/otd_btn_Save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/background"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>