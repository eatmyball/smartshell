<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScoreAStudentActivity" >

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
		
		     <EditText
		        android:id="@+id/ss_tbxBarcode"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:inputType="text"
		        android:layout_marginRight="15dp"
		        android:layout_marginLeft="15dp"		        
		        android:ems="10" >		       
		    </EditText>
		    <Button
		        android:id="@+id/ss_btn_Deal"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/background" 
		        android:textColor="#ffffff"
		        android:textSize="24sp"
		        android:layout_marginRight="15dp"
		        android:layout_marginLeft="15dp"
		        
		        android:text="@string/btnDeal" />
		    
		    <TextView
            android:id="@+id/ss_PersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView01"
            android:layout_marginRight="15dp"
		        android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dip"            
            android:textSize="16dip" />
		    
		    <TextView
            android:id="@+id/ss_PersonNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView01" 
            android:layout_marginRight="15dp"
		        android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dip"           
            android:textSize="16dip" />
		    
		    <EditText
		        android:id="@+id/ss_tbxScore"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:inputType="text"
		        android:layout_marginRight="15dp"
		        android:layout_marginLeft="15dp"		        
		        android:ems="10" >		       
		    </EditText>
		    		    
	    <Button
		        android:id="@+id/ss_btn_Save"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/background" 
		        android:textColor="#ffffff"
		        android:textSize="24sp"
		        android:layout_marginRight="15dp"
		        android:layout_marginLeft="15dp"
		        
		        android:text="@string/btnSave" />
	</LinearLayout>

</RelativeLayout>
