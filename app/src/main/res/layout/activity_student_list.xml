<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentListActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <ImageView
            android:id="@+id/ShangKeFanHui"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:gravity="left"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|center"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" >

            <ImageView
                android:id="@+id/ShangKePre"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:gravity="right"
                android:src="@drawable/ic_pre" />

            <TextView
                android:id="@+id/tNmerPatientInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="课程基本信息"
                android:textColor="#333"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ShangKeNext"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:gravity="left"
                android:src="@drawable/ic_next" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:gravity="right"
            android:onClick="OnRefreshMenuClick"
            android:src="@drawable/ic_menu" />
    </LinearLayout>

    <EditText
        android:id="@+id/sk_tbxBarcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:inputType="textNoSuggestions"
        >
    </EditText>

    <Button
        android:id="@+id/sk_btn_Deal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/background"
        android:text="@string/btnDeal"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:visibility="gone" >
    </Button>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f1f9ff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <TextView
            android:id="@+id/sk_tbxKeCi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="课次："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sk_tbxKeCheng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="课程："
            android:textSize="20sp" />  
            
        <TextView
            android:id="@+id/sk_tbxZongShu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="学生总数："
            android:textSize="20sp" />        

        <TextView
            android:id="@+id/sk_tbxTrainDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="日期："
            android:textSize="20sp" />        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="#f1f9ff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <Button
            android:id="@+id/sk_btnKaiShiShangKe"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_kssk"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </Button>

        <TextView
            android:id="@+id/sk_tbxKaiShiShiKe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp" />
    </LinearLayout>    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#f1f9ff"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <Button
            android:id="@+id/sk_btnWanChengShangKe"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_wcsk"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </Button>

        <TextView
            android:id="@+id/sk_tbxWanChengShiKe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/sk_tbxKaiShiShiKe111122"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="#5bb5fe"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <ImageView
            android:id="@+id/KeChengZongJiePre"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:gravity="right"
            android:src="@drawable/icon_users" />

        <TextView
            android:id="@+id/skkq_tbxMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="需要出勤的学生："
            android:textColor="#4734d6"
            android:textSize="20sp" />
        
        <ImageView
            android:id="@+id/skkq_NewStudent"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="50dp"
            android:gravity="right"
            android:src="@drawable/icon_kczj" />
    </LinearLayout>

    <ListView
        android:id="@+id/skkq_lvwPerson"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:fadeScrollbars="false" />

</LinearLayout>
